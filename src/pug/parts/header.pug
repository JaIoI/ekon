						include ../svg/ic_user.svg
					.icon.mob_show
						include ../svg/ic_user_mob.svg
				a(href="#" title="Корзина")
					.icon.mob_hide
						include ../svg/ic_cart.svg
					.icon.mob_show
						include ../svg/ic_cart_mob.svg
