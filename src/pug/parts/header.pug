			a(href="#")
				.icon
					include ../svg/ic_location.svg
				.text Екатеринбург
			a(href="tel:+74955063650")
				.icon
					include ../svg/ic_phone.svg
				.text +7 (495) 506-36-50
			a(href="mailto:office@uconerfo.ru")
				.icon
					include ../svg/ic_mail.svg
				.text office@uconerfo.ru
			a(href="#")
				.icon
					include ../svg/ic_pen.svg
				.text Заявка на расчет
