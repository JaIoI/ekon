.popup
	pof()
	top 0
	left 0
	right 0
	bottom 0
	background-color rgba(0,0,0,.5)
	z-index -1
	opacity 0
	&.active
		z-index 9
		opacity 1
	.wrap
		padding-left 18px
	&__close
		poa()
		top 7px
		right 14px
		width 40px
		height 40px
		df()
		aic()
		jcc()
		border none
		outline none
		background none
		svg
			db()
	&__content
		poa()
		top 0
		left -1000px
		bottom -100px
		width 100%
		height calc(100vh + 100px)
		max-width 414px
		padding 18px 0 170px
		background-color _white
		overflow-y auto
		transition .5s
	&.active
		.popup__content
			left 0
	.logo
		max-width 186px
		margin-bottom 60px
		&__inner
			width 100%
		&__img
			width 28px
			margin-right 9px
		svg
			width 100%
	ul
		margin 0
		padding 0
		list-style none
	a
		tdn()
		font-size 14px
		line-height 18px
		opacity 1
	.categories
		margin-bottom 40px
	.category
		padding-bottom 21px
		border-bottom 1px solid rgba(0, 0, 0, 0.13)
		+ .category
			margin-top 22px
		&__top
			df()
			aic()
			cursor pointer
			user-select none
			.icon_drop
				transform rotate(180deg)
		ul
			padding 27px 0 21px
			li + li
				margin-top 24px
		.title
			font-size 16px
			line-height 24px
		.icon
			df()
			aic()
			jcc()
			width 21px
			height 21px
			margin-right 19px
			margin-left 2px
			&_drop
				width auto
				height auto
				margin 5px 0 0 auto
		&.hidden
			ul,
			ul li,
			ul a
				padding-top 0
				padding-bottom 0
				margin-top 0
				margin-bottom 0
				font-size 0 !important
				line-height 0
				height 0
				opacity 0
			.icon_drop
				transform rotate(0deg)
	.sitenav
		li
			+ li
				margin-top 29px