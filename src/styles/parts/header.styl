.header
	&__top
		df()
		aic()
		padding 17px 0

	&__links
		df()
		aic()
		jcc()
		margin-left 0
		margin-right -13px
		a
			por()
			df()
			aic()
			jcc()
			width 45px
			height 45px
			border-radius 50%
			background-color rgba(0,0,0,0)
			transition .5s
			&:hover
			&:focus
				background-color #e1e1e1
			svg
				db()
				margin-top 2px

		.count
			poa()
			df()
			aic()
			jcc()
			top 0
			right 0
			width 17px
			height 17px
			border-radius 50%
			font-weight bold
			font-size 10px
			line-height 13px
			color _white
			background-color #1DBCD2
	&__bottom
		df()
		aic()
		jcsb()
		padding 30px 0
		a
			df()
			aic()
			jcc()
			tdn()
			font-size 18px
			+ a
				margin-left 20px
			.icon
				df()
				aic()
				jcc()
				width 24px
				height 24px
				margin-right 9px
			.text
				por()
				&:after
					underline()
					bottom 1px
					background-color _dark
			&:hover
			&:focus
				.text:after
					underline_active()

	.user_setup
		margin-left 18px
		margin-right 11px

.burger
	width 34px
	margin-right 75px
	padding 7px 0
	border none
	background none
	svg
		db()

.search
	flex-grow 1
	max-width 851px
	margin-right auto
	label
		por()
		db()
		width 100%
	&__ic
		poa()
		top 50%
		left 30px
		margin-top -10px
		pointer-events none
		svg
			db()
	input
		width 100%
		padding 17px 17px 17px 66px
		font-size 15px
		line-height 1
		color _dark
		background-color #F6F6F6
		border none
		outline none

@media (max-width: 480px)
	.header
		&__top
			fww()
			padding-bottom 0
		.user_setup
			margin-left 4px
			margin-right 4px
			padding-bottom 2px
		.search
			order 5
			width calc(100% + 40px)
			margin 16px -20px 0
			&__ic
				left 20px
			input
				padding-left 56px
				padding-top 18px
		.burger
			width 29px
			height 29px
			margin-right 21px
			padding 0
			svg
				width 29px
				height auto

		&__links
			margin-right -8px
			a
				width 38px
				height 38px
				svg
					margin 0
		&__bottom
			dn()